{
  "name": "localnest-backend",
  "version": "1.0.0",
  "description": "Backend for LocalNest service platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "db:migrate": "prisma migrate dev",
